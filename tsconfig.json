{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "./src/*",
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}